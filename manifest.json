{
  "manifest_version": 3,
  "name": "Assistant AI",
  "version": "1.0",
  "description": "Summarize and process web pages and selected text with OpenAI.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "images/icon.png", 
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "images/icon.png"  
  }
}

